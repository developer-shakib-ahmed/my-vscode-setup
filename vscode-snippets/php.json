{
  // Place your snippets for php here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:

  // "Print to console": {
  //   "prefix": "log",
  //   "body": ["console.log('$1');", "$2"],
  //   "description": "Log output to console"
  // },

  "Insert Plugin Header Comments": {
    "prefix": "plHeadCom",
    "body": [
      "/**\n * Plugin Name: ${1:The Plugin}\n * Description: ${2:Description}\n * Plugin URI: https://${3:plugins.shakibahmed.com/}\n * Author: ${4:Developer Shakib Ahmed}\n * Author URI: https://${5:shakibahmed.com/}\n * Text Domain: sk-${6:text-domain}\n * Domain Path: /${7:languages}/\n * Version: ${8:1.0}\n * License: GPL2 or Later\n * License URI: https://www.gnu.org/licenses/gpl-2.0.html\n */\n\nif ( ! defined( 'ABSPATH' ) ) {\n\texit;\n}\n"
    ],
    "description": ""
  },

  "v1 - Insert Doc Block Comments": {
    "prefix": "docBloCom-V1",
    "body": ["/**\n * ${1:Summary}\n */\n"],
    "description": ""
  },

  "v2 - Insert Doc Block Comments": {
    "prefix": "docBloCom-V2",
    "body": [
      "/**\n * ${1:Summary}\n *\n * @return ${2:[type]} ${3:[description]}\n */\n"
    ],
    "description": ""
  },

  "v3 - Insert Doc Block Comments": {
    "prefix": "docBloCom-V3",
    "body": [
      "/**\n * ${1:Summary}\n *\n * ${2:Description}\n *\n * @${3:param} ${4:type}\n *\n * @return ${5:void}\n */\n"
    ],
    "description": ""
  },

  "v4 - Insert Doc Block Comments": {
    "prefix": "docBloCom-V4",
    "body": [
      "/**\n * ${1:Summary}\n *\n * ${2:Description}\n *\n * @since ${3:x.x.x}\n *\n * @see ${4:Function/method/class relied on}\n *\n * @link ${5:URL}\n *\n * @global type ${6:varname Description}\n *\n * @param ${7:type}\n *\n * @return ${8:void}\n */\n"
    ],
    "description": ""
  },

  "if( isset( $condition ) ) { }": {
    "prefix": "ifis",
    "body": ["if( isset( ${0:condition} ) ) {\n \t# code ...\n}"],
    "description": ""
  },

  "if( empty( $condition ) ) { }": {
    "prefix": "ifem",
    "body": ["if( empty( ${0:condition} ) ) {\n \t# code ...\n}"],
    "description": ""
  }
}
